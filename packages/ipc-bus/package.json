{
    "name": "electron-common-ipc-ik",
    "version": "15.1.7",
    "description": "A safe IPC bus for applications built on Node or Electron.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/emmkimme/electron-common-ipc.git"
    },
    "keywords": [
        "electron",
        "ipc",
        "renderer",
        "sandbox",
        "node",
        "communication",
        "contextisolation",
        "process",
        "rpc",
        "socket",
        "eventemitter",
        "bus",
        "message",
        "remoteCall",
        "frame",
        "iframe"
    ],
    "author": "Emmanuel Kimmerlin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/emmkimme/electron-common-ipc/issues"
    },
    "homepage": "https://github.com/emmkimme/electron-common-ipc#readme",
    "maintainers": [
        {
            "name": "Emmanuel Kimmerlin",
            "email": "emmanuel.kimmerlin@refinitiv.com"
        }
    ],
    "main": "./lib/index.js",
    "browser": "./lib/index-browser.js",
    "types": "./lib/index.d.ts",
    "dependencies": {
        "csv-stringify": "^6.0.4",
        "electron-process-type": "~4.2.0",
        "fs-extra": "^10.0.0",
        "json-helpers": "^5.2.0",
        "nanoid": "^3.1.30",
        "queue-microtask": "^1.2.3",
        "semver": "^7.3.5",
        "socket-serializer": "^11.1.1",
        "uuid": "^8.3.2",
        "winston": "~3.3.3"
    },
    "devDependencies": {
        "@electron-common-ipc/eslint-config": "*",
        "@electron-common-ipc/prettier-config": "*",
        "@types/fs-extra": "^9.0.13",
        "@types/node": "~14.14.37",
        "@types/semver": "^7.3.9",
        "@types/shortid": "0.0.29",
        "@types/uuid": "^8.3.3",
        "@types/ws": "^8.5.3",
        "browserify": "^17.0.0",
        "chai": "~4.3.4",
        "del-cli": "^4.0.1",
        "dts-bundle": "^0.7.3",
        "electron": "~11.3.0",
        "electron-mocha": "^11.0.2",
        "eslint": "^8.25.0",
        "expect": "^27.4.2",
        "minimist": "~1.2.5",
        "mocha": "^9.1.3",
        "npm-dts": "^1.3.10",
        "npm-run-all": "~4.1.5",
        "prettier": "^2.7.1",
        "sinon": "^13.0.1",
        "socket-port-helpers": "^2.1.0",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "clean": "run-p clean:*",
        "clean:build": "del-cli ./lib ./build ./dist",
        "clean:test": "del-cli ./test/**/build/*",
        "build": "npm run build-js && npm run build-declaration && npm run browserify-test",
        "build-js": "tsc -p ./tools/tsconfig-js.json",
        "_build-declaration": "",
        "build-declaration": "run-s build-declaration:*",
        "build-declaration:ts": "tsc -p ./tools/tsconfig-declaration.json",
        "build-declaration:dts-bundle": "dts-bundle --outputAsModuleFolder --name index --main ./lib/index.d.ts",
        "build-declaration:dts-bundle-browser": "dts-bundle --outputAsModuleFolder --name index-browser --main ./lib/index-browser.d.ts",
        "build-declaration:dts-bundle-preload": "dts-bundle --outputAsModuleFolder --name index-preload --main ./lib/index-preload.d.ts",
        "build-declaration:clean-up": "del-cli ./lib/**/*.d.ts !./lib/index.d.ts !./lib/index-browser.d.ts !./lib/index-preload.d.ts",
        "browserify-test": "run-p browserify-test:*",
        "browserify-test:preload": "browserify -o ./test/electron-tests/build/page-preload.bundle.js -x electron ./test/electron-tests/page-preload.js",
        "browserify-test:js1": "browserify -o ./test/electron-tests/build/page.bundle.js -x electron ./test/electron-tests/page.js",
        "browserify-test:js2": "browserify -o ./test/electron-tests/build/page-frame.bundle.js -x electron ./test/electron-tests/page.js",
        "browserify-test:performance-preload": "browserify -o ./test/performance/build/renderer-preload.bundle.js -x electron ./test/performance/renderer-preload.js",
        "browserify-test:performance-renderer": "browserify -o ./test/performance/build/renderer.bundle.js -x electron ./test/performance/renderer.js",
        "test": "electron-mocha --no-timeouts --reporter spec test/*.test.js",
        "_test": "electron-mocha --no-timeouts --reporter spec",
        "test:performance": "electron-mocha --no-timeouts --reporter spec test/performance.test.js",
        "deploy": "npm publish ./ --registry https://registry.npmjs.org",
        "lint": "eslint src"
    },
    "prettier": "@electron-common-ipc/prettier-config"
}
